<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
    <name>Ecwid Categories Module</name>
    <creationDate>September 28, 2012</creationDate>
    <author>Ecwid, Inc</author>
    <authorEmail>info@ecwid.com</authorEmail>
    <authorUrl>http://www.ecwid.com</authorUrl>
    <copyright>(C) 2009 - 2012 Ecwid, Inc.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <version>1.4</version>
    <description>Module to show the ECWID store categories</description>
    <files>
        <filename module="mod_ecwid_categories">mod_ecwid_categories.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix"
                       description="PARAMMODULECLASSSUFFIX"/>
                <field name="categoryLayout" type="list" default="xVCategories" label="Layout of Product Categories"
                       description="">
                    <option value="xVCategories">Vertical</option>
                    <option value="xCategories">Horizontal</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
