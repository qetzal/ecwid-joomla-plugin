<extension type="component" version="1.6.0" method="upgrade">
    <name>Ecwid</name>
    <creationDate>September 28, 2012</creationDate>
    <author>Ecwid, Inc</author>
    <authorEmail>info@ecwid.com</authorEmail>
    <authorUrl>http://www.ecwid.com</authorUrl>
    <copyright>(C) 2009 - 2012 Ecwid, Inc.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <version>1.4</version>

    <!-- user part -->
    <files folder="site">
        <filename>controller.php</filename>
        <filename>index.html</filename>
        <filename>ecwid.php</filename>
        <folder>views</folder>
        <folder>helpers</folder>
    </files>

    <!-- administration part -->
    <administration>
        <menu task="default" img="components/com_ecwid/assets/images/ecwid_16.png">Ecwid</menu>
        <files folder="admin">
            <folder>assets</folder>
            <folder>controllers</folder>
            <folder>models</folder>
            <folder>views</folder>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>ecwid.php</filename>
        </files>
        <languages folder="admin/language/en-GB">
    			<language tag="en-GB">en-GB.com_ecwid.ini</language>
          <language tag="en-GB">en-GB.com_ecwid.sys.ini</language>
		    </languages>
    </administration>
</extension>
